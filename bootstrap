#!/bin/bash

for p in plugins/*.bash ; do
	source $p
done

install_rpmfusion
install_packages my-fedora-rpms
install_vimrc

link_file	$(pwd)/dotfiles/terminator	~/.config/terminator/config
link_file	$(pwd)/dotfiles/gvimrc		~/.gvimrc
link_file	$(pwd)/dotfiles/gitignore	~/.gitignore

link_dropbox	~/Dropbox/Documents		~/Documents
link_dropbox	~/Dropbox/Pictures		~/Pictures
link_dropbox	~/Dropbox/Public		~/Public
link_dropbox	~/Dropbox/home/Templates	~/Templates
